#1]3
def test_prime(n):
 if (n==1):
    return False
 elif (n==2):
    return True;
 else:
    for x in range(2,n):
      if(n % x==0):
        return False

        return True


print(test_prime(2))

#4
def perfect_number(n):
  sum = 0
  for x in range(1,n):
    if n % x == 0:
      sum += x
  return sum == n
print(perfect_number(6))


