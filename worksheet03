#1
def max_of_two( x, y ):
 if x > y:
 return x
 return y
def max_of_three( x, y, z ):
 return max_of_two( x, max_of_two( y, z ) )
print(max_of_three(3, 6, -5))

#2
def multiply(numbers):
 total = 1
 for x in numbers:
 total *= x
 return total
print(multiply((8, 2, 3, -1, 7)))

